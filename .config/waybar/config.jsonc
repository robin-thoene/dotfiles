{
  "layer": "top",
  "position": "top",
  "modules-left": [
    "sway/workspaces"
  ],
  "modules-center": [
    "clock",
    "sway/mode"
  ],
  "modules-right": [
    "temperature",
    "cpu",
    "memory",
    "network",
    "bluetooth",
    "pulseaudio",
    "backlight",
    "sway/language",
    "idle_inhibitor",
    "custom/theme-toggle",
    "battery"
  ],
  "backlight": {
    "format": "{icon}",
    "format-icons": [
      "󰃞",
      "󰃟",
      "󰃠"
    ],
    "scroll-step": 5,
    "tooltip": false
  },
  "battery": {
    "interval": 300,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": [
      "󱃍",
      "󰁺",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ],
    "format-charging": "{capacity}% 󰂄"
  },
  "bluetooth": {
    "format": "󰂯",
    "format-off": "󰂲",
    "on-click": "swaymsg exec '$term -e bluetui'"
  },
  "clock": {
    "format": "{:%d.%m.%Y %H:%M}"
  },
  "cpu": {
    "interval": 60,
    "format": "󰘚",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "on-click": "swaymsg exec '$term -e htop -s PERCENT_CPU'"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "󰚥",
      "deactivated": "󰚦"
    },
    "tooltip": true,
    "tooltip-format-activated": "power-saving disabled",
    "tooltip-format-deactivated": "power-saving enabled"
  },
  "memory": {
    "interval": 60,
    "format": "󰍛",
    "on-click": "swaymsg exec '$term -e htop -s PERCENT_MEM'"
  },
  "network": {
    "format-wifi": " ",
    "format-ethernet": "󰈀",
    "format-disconnected": "󰖪",
    "tooltip-format-wifi": "{essid}, {signalStrength}%",
    "tooltip-format-ethernet": "{ifname}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "swaymsg exec '$term -e impala'"
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "󰖁",
    "format-icons": {
      "headphone": "󰋋",
      "headset": "󰋎",
      "default": [
        "󰕿",
        "󰖀",
        "󰕾"
      ]
    },
    "scroll-step": 5,
    "on-click": "swaymsg exec '$term -e pulsemixer'",
    "tooltip": false
  },
  "sway/language": {
    "format": " {}",
    "min-length": 5,
    "tooltip": false,
    "on-click": "swaymsg input \"1:1:AT_Translated_Set_2_keyboard\" xkb_switch_layout next"
  },
  "temperature": {
    "format": ""
  },
  "custom/theme-toggle": {
    "format": "{icon}",
    "return-type": "json",
    "format-icons": {
      "dark": "",
      "light": ""
    },
    "interval": "once",
    "exec": "~/dev/robin-thoene/device-automation/arch/detect_theme.sh",
    "on-click": "~/dev/robin-thoene/device-automation/arch/theme_toggle.sh"
  }
}
