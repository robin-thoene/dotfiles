	  border-radius: 0px;																													/* Neutralise effects of QToolButton on QTabBar QToolButton::left-arrow and right-arrow *
}*/

QTabBar::scroller {																															/* Width of the scroll buttons */
  width: 20px;
}

QTabBar QToolButton::left-arrow {																								/* Tab Bar Scroll Button Left */
  image: url('styles:DarkenTS/gfx/gui/arrows/left.svg');
}

QTabBar QToolButton::right-arrow {																							/* Tab Bar Scroll Button Right */
  image: url('styles:DarkenTS/gfx/gui/arrows/right.svg');
}

QTabBar QToolButton::left-arrow:disabled {
  image: url('styles:DarkenTS/gfx/gui/arrows/left_disabled.svg');
}

QTabBar QToolButton::right-arrow:disabled {
  image: url('styles:DarkenTS/gfx/gui/arrows/right_disabled.svg');
}

/* ---- TreeTab/Tree View ---- */

/*QWidget {
  border: none;	NO IDEA WHY THIS IS HERE, LEAVING IT AS REMINDER IN CASE SOMETHING BREAKS
}*/

QWidget::pane {
  border: 0px solid transparent;
}

QTreeView {																																			/* ServerTreeView (Channels, Users, etc.) */
  border: 1px solid rgb(29,29,29);
  background-color: rgb(29,29,29);
    alternate-background-color: rgb(29,29,29);																	/* Prevent artefacts when switching from style that utilizes alternate-background-color (Example: bluesky) */
  outline: none;
}

QTreeView::item:hover {
  background-color: rgba(62,79,94,0.5);
}
	
QTreeView::item:selected:active,
QTreeView::item:selected:!active {
  background-color: rgb(62,79,94);
  color: rgb(216,216,216);																											/* Important for !active to avoid black default font colour of Channels, Users, etc if "out of focus" (Example: Channel selected -> Edit Channel) */
}
	
QTreeView::branch:open:has-children {																						/* Only display arrows on open branches that have children */
  image: url('styles:DarkenTS/gfx/gui/arrows/branch_open.svg');
}

QTreeView::branch:open:has-children:hover {
  image: url('styles:DarkenTS/gfx/gui/arrows/branch_open_hover.svg');
}

QTreeView::branch:closed:has-children {																					/* Only display arrows on closed branches that have children */
  image: url('styles:DarkenTS/gfx/gui/arrows/branch_closed.svg');
}

QTreeView::branch:closed:has-children:hover {
  image: url('styles:DarkenTS/gfx/gui/arrows/branch_closed_hover.svg');
}

QTreeView:disabled,
QHeaderView:disabled,
QTreeView::item:selected:disabled {
	background-color: rgb(40,40,40);
  color: rgb(72,72,72);
}

